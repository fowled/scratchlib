{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es6",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/@types",
    "module": "commonjs"
  },
  
  "include": [
    "./lib/*"
  ],

  "exclude": [
    "node_modules", 
    "tests",
    "dist"
  ],

}
