{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es6",
    "skipLibCheck": true,
    "module": "commonjs"
  },
  
  "include": [
    "lib", "@types"
  ],

  "exclude": [
    "node_modules", 
    "tests",
    "dist",
    "@types",
    "**/*.d.ts"
  ],

}
